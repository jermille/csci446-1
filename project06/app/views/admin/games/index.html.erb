<h1>Listing games</h1>

<%= link_to 'New game', new_admin_game_path %><br />

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Rating</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.user %></td>
    <td><%=h game.title %></td>
    <td><%=h game.rating %></td>
    <td><%= link_to 'Show', admin_game_path(game) %></td>
    <td><%= link_to 'Edit', edit_admin_game_path(game) %></td>
    <td><%= link_to 'Destroy', admin_game_path(game), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table><br />

<%= will_paginate @games %><br />
<%= pluralize(@game_count, "game") %>

